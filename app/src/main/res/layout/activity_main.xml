        android:layout_marginBottom="16dp" />

    <!-- Nota informativa -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* La aplicaci칩n alerta si la temperatura de la cadena de fr칤o est치 fuera del rango definido."
